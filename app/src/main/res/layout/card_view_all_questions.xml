<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:fontFamily="@font/raleway_bold"
                android:maxLines="1"
                android:text="Title"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/topic_title"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="7dp"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:maxLines="2"
                android:text="Context"
                android:textColor="#555" />

            <TextView
                android:id="@+id/question_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/topic_title"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/raleway_light_italic"
                android:text="User Name"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/question_user_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/question_user_name"
                android:layout_alignBottom="@+id/question_user_name"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/question_user_name"
                android:fontFamily="@font/raleway_light_italic"
                android:text="Surname"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/question_user_surname"
                android:layout_alignBottom="@+id/question_user_surname"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/question_user_surname"
                android:text="-" />

            <TextView
                android:id="@+id/answer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_alignBottom="@+id/textView10"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/textView10"
                android:fontFamily="@font/raleway"
                android:text="Answer Count"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/question_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/answer_count"
                android:layout_alignBottom="@+id/answer_count"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/textView13"
                android:fontFamily="@font/raleway"
                android:text="Topic Date"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/answer_count"
                android:layout_alignBottom="@+id/answer_count"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/answer_count"
                android:text="-" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_dots" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>