<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/waiting_group_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/custom_red">

                <TextView
                    android:id="@+id/waiting_group_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway_bold"
                    android:maxLines="1"
                    android:text="Title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/waiting_group_title"
                    android:layout_alignBottom="@+id/waiting_group_title"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/waiting_group_title"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/waiting_group_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/waiting_group_title"
                    android:layout_alignBottom="@+id/waiting_group_title"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/textView10"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway_light_italic"
                    android:maxLines="1"
                    android:text="User Name"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/waiting_group_user_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/waiting_group_title"
                    android:layout_alignBottom="@+id/waiting_group_title"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/waiting_group_user_name"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway_light_italic"
                    android:maxLines="1"
                    android:text="Surname"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/waiting_group_question_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/waiting_group_title"
                    android:layout_below="@+id/waiting_group_title"
                    android:fontFamily="@font/raleway"
                    android:text="Question Count"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/waiting_group_question_count"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/waiting_group_question_count"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/waiting_group_answer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView14"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/textView13"
                    android:fontFamily="@font/raleway"
                    android:text="Answer Count"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView13"
                    android:layout_alignBottom="@+id/textView13"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/waiting_group_answer_count"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/waiting_group_user_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView14"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/textView14"
                    android:fontFamily="@font/raleway"
                    android:text="User Count"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/waiting_group_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/raleway"
                    android:text="Description"
                    android:textColor="#555" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="-16dp"
                android:background="@color/white">

                <Button
                    android:id="@+id/join_waiting_group"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:fontFamily="@font/raleway"
                    android:padding="0dp"
                    android:text="@string/join"
                    android:textAllCaps="false"
                    android:theme="@style/PrimaryFlatButton" />

                <Button
                    android:id="@+id/reject_waiting_group"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/raleway"
                    android:padding="0dp"
                    android:text="@string/reject"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:theme="@style/PrimaryFlatButton" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>